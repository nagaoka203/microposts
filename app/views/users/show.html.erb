<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %><br><br>
        <%= "居住地域: " + @user.location %>
      </h1>
    </section>
    <section class="followings-followers">
      <%= link_to "フォロー一覧",followings_user_path %><br>
      <%= link_to "フォロワー一覧",followers_user_path %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>投稿数 (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>